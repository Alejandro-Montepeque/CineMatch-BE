{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["**/*.ts", "**/*.js", "db.js"],
  "exclude": ["node_modules","dist"]
}
